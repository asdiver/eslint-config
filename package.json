{
  "name": "@fastcoder/eslint-config-monorepo",
  "private": true,
  "author": "asdiver",
  "description": "quickly build eslint configurations",
  "homepage": "https://github.com/asdiver/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/asdiver/eslint-config/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "publish": "pnpm -r publish",
    "release": "bumpp -r && pnpm run publish",
    "pre-release": "tsx ./scripts/pre-release.ts",
    "feature": "tsx ./scripts/create-feature.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asdiver/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "config",
    "eslint-config"
  ],
  "engines": {
    "node": ">=16.13.1",
    "pnpm": ">=6.32.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@fastcoder/eslint-config": "workspace:*",
    "@fastcoder/eslint-config-ts": "workspace:*",
    "@types/eslint": "^8.37.0",
    "@types/fs-extra": "^11.0.1",
    "@vitest/ui": "^0.30.1",
    "bumpp": "^9.1.0",
    "consola": "^3.0.2",
    "eslint": "^8.38.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "local-pkg": "^0.4.3",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "version": "1.0.5",
  "license": "MIT"
}
